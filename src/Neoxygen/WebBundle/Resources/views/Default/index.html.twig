{% extends "::base.html.twig" %}

{% block content %}
    <!-- Homepage Slider -->
    <div class="homepage-slider">
        <div id="sequence">
            <ul class="sequence-canvas">
                <!-- Slide 1 -->
                <li class="bg4">
                    <!-- Slide Title -->
                    <h2 class="title">Components</h2>
                    <!-- Slide Text -->
                    <h3 class="subtitle">Full featured PHP components for the Neo4j ecosystem.</h3>
                    <!-- Slide Image -->
                    <img class="slide-img img-rounded" src="{{ '/assets/img/_home/slide1-github.png' }}" alt="Slide 1" />
                </li>
                <!-- End Slide 1 -->
                <!-- Slide 2 -->
                <li class="bg3">
                    <!-- Slide Title -->
                    <h2 class="title">Graphgen</h2>
                    <!-- Slide Text -->
                    <h3 class="subtitle">An online application helping you in graph prototyping.</h3>
                    <!-- Slide Image -->
                    <img class="slide-img img-rounded" src="{{ '/assets/img/_home/slide2-graphgen.png' }}" alt="Slide 2" />
                </li>
                <!-- End Slide 2 -->
                <!-- Slide 3 -->
                <li class="bg2">
                    <!-- Slide Title -->
                    <h2 class="title">Services</h2>
                    <!-- Slide Text -->
                    <h3 class="subtitle">Need help in developing with Neo4j &amp; PHP, we can help you !.</h3>
                    <!-- Slide Image
                    <img class="slide-img img-rounded" src="{{ '/assets/img/homepage-slider/support.jpg' }}" alt="Slide 3" />
                    -->
                </li>
                <!-- End Slide 3 -->
            </ul>
            <div class="sequence-pagination-wrapper">
                <ul class="sequence-pagination">
                    <li>1</li>
                    <li>2</li>
                    <li>3</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Homepage Slider -->

    <!-- Latest releases and news -->

    <div class="section">
        <div class="container">
            <div class="row">
                <!-- Featured News -->
                <div class="col-sm-6 featured-news">
                    <h2>Latest releases</h2>
                    {% for release in releases %}
                        <div class="row">
                            <div class="col-xs-8">
                                <div class="caption"><a href="page-blog-post-right-sidebar.html">{{ release.package }}</a></div>
                                <div class="intro">v {{ release.version }}<a href="{{ path('releases_show', {'id':release.id, 'slug':release.slug}) }}">&nbsp;Read release info...</a></div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- End Featured News -->
                <!-- Latest News -->
                <div class="col-sm-6 latest-news">
                    <h2>Latest News</h2>
                    {% for post in posts %}
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="caption"><a href="{{ path('news_show', {'slug': post.slug}) }}" title="{{ post.title }}">{{ post.title }}</a></div>
                                <div class="date"></div>
                                <div class="intro">{{ post.body }}&nbsp;<a href="{{ path('news_show', {'slug': post.slug}) }}" title="Read more about the article {{ post.title }}">Read more...</a></div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!-- End Featured News -->
            </div>
        </div>
    </div>


    <hr />

    <!-- Press Coverage -->
    <div class="section section-white">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="in-press press-wired">
                        <a href="#">Graphgen is an awesome tool for generating and visualizing graph data with cypher!</a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="in-press press-mashable">
                        <a href="#">This is amazing! Online Graph generator w/ Cypher spec, faker support, graphviz, live import and script dl.</a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="in-press press-techcrunch">
                        <a href="#">My favorite Graphie-Awards: seenickcode, GraphAlchemist, neoxygenIO, Linkurious, wefreema, neo4jrb Thank you for your great community work!<br/> - "Michael Hunger"</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Press Coverage -->

    <!-- Services -->
    <div class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="service-wrapper">
                        <img src="{{ '/assets/img/service-icon/box.png' }}" alt="Package">
                        <h3>NeoClient</h3>
                        <p>The most advanced PHP client for the Neo4j ReST API, with native multiDB, replication feature and extension management.</p>
                        <a href="{{ path('components') }}" class="btn">Read more</a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="service-wrapper">
                        <img src="{{ '/assets/img/service-icon/diamond.png' }}" alt="Package">
                        <h3>Graphgen</h3>
                        <p>An online Neo4j Graph Generation engine. Export features and database importer, even in your local instances.</p>
                        <a href="http://graphgen.neoxygen.io" target="_blank" class="btn">Discover !</a>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="service-wrapper">
                        <img src="{{ '/assets/img/service-icon/ruler.png' }}" alt="Service">
                        <h3>Custom needs ?</h3>
                        <p>Need custom development in PHP around Neo4j, or a formation ? <br/> We'll be happy to help you. Get in touch !</p>
                        <a href="mailto:contact@neoxygen.io" class="btn">Read more</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Services -->

    <!-- Call to Action Bar -->
    <div class="section section-white">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="calltoaction-wrapper">
                        <h3>Discover more components on our <b>Components page</b></h3> <a href="{{ path('components') }}" class="btn btn-orange" title="Neoxygen's PHP Components for Neo4j">Discover !</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Call to Action Bar -->
{% endblock %}