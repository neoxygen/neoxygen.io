{% extends "::base.html.twig" %}

{% block content %}
    <!-- Homepage Slider -->
    <div class="homepage-slider">
        <div id="sequence">
            <ul class="sequence-canvas">
                <!-- Slide 1 -->
                <li class="bg4">
                    <!-- Slide Title -->
                    <h2 class="title">Components</h2>
                    <!-- Slide Text -->
                    <h3 class="subtitle">Full featured PHP components for the Neo4j ecosystem.</h3>
                    <!-- Slide Image -->
                    <img class="slide-img img-rounded" src="{{ '/assets/img/_home/slide1-github.png' }}" alt="Slide 1" />
                </li>
                <!-- End Slide 1 -->
                <!-- Slide 2 -->
                <li class="bg3">
                    <!-- Slide Title -->
                    <h2 class="title">Graphgen</h2>
                    <!-- Slide Text -->
                    <h3 class="subtitle">An online application helping you in graph prototyping.</h3>
                    <!-- Slide Image -->
                    <img class="slide-img img-rounded" src="{{ '/assets/img/_home/slide2-graphgen.png' }}" alt="Slide 2" />
                </li>
                <!-- End Slide 2 -->
                <!-- Slide 3 -->
                <li class="bg2">
                    <!-- Slide Title -->
                    <h2 class="title">Services</h2>
                    <!-- Slide Text -->
                    <h3 class="subtitle">Need help in developing with Neo4j &amp; PHP, we can help you !.</h3>
                    <!-- Slide Image -->
                    <img class="slide-img img-rounded" src="{{ '/assets/img/homepage-slider/support.jpg' }}" alt="Slide 3" />
                </li>
                <!-- End Slide 3 -->
            </ul>
            <div class="sequence-pagination-wrapper">
                <ul class="sequence-pagination">
                    <li>1</li>
                    <li>2</li>
                    <li>3</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Homepage Slider -->

    <!-- Latest releases and news -->

    <div class="section">
        <div class="container">
            <div class="row">
                <!-- Featured News -->
                <div class="col-sm-6 featured-news">
                    <h2>Latest releases</h2>
                    <div class="row">
                        <div class="col-xs-4"><a href="page-blog-post-right-sidebar.html"><img src="img/news1.jpg" alt="Post Title"></a></div>
