                </div>
                <!-- End Featured News -->
                <!-- Latest News -->
                <div class="col-sm-6 latest-news">
                    <h2>Latest News</h2>
                    {% for post in posts %}
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="caption"><a href="page-blog-post-right-sidebar.html">{{ post.title }}</a></div>
                                <div class="date">16 May 2013 </div>
                                <div class="intro">{{ post.body }}<a href="page-blog-post-right-sidebar.html">Read more...</a></div>
