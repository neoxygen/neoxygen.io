{% extends '::base.html.twig' %}

{% block title %}
 | News
{% endblock %}

{% block content -%}
    <div class="section section-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>News</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container">

            {% for post in posts %}
            <div class="row service-wrapper-row">
                <div class="col-sm-8">
                    <h3><a href="{{ path('news_show', {'slug':post.slug}) }}" title="{{ post.title }}">{{ post.title }}</a></h3>
                    <p>
                        {{ post.preview }}
                    </p>
                    <p>Written by <a href="https://twitter.com/ikwattro">Christophe Willemen</a> on {{ post.created|date('d-m-Y') }} at {{ post.created|date('H:i:s') }}</p>
                </div>
            </div>
                <hr />
            {% endfor %}
        </div>
    </div>
    {% endblock %}
